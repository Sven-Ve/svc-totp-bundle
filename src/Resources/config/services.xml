<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

      <service id="svc_totp.controller" class="Svc\TotpBundle\Controller\TotpController" public="true" autowire="true" >
        <call method="setContainer">
            <argument type="service" id="Psr\Container\ContainerInterface"/>
        </call>
        <tag name="container.service_subscriber"/>
        <tag name="controller.service_arguments"/>
      </service>

      <service id="svc_totp.admin_controller" class="Svc\TotpBundle\Controller\TotpAdminController" public="true" autowire="true" >
        <call method="setContainer">
            <argument type="service" id="Psr\Container\ContainerInterface"/>
        </call>
        <tag name="container.service_subscriber"/>
        <tag name="controller.service_arguments"/>
      </service>

      <service id="svc_totp.forgot_controller" class="Svc\TotpBundle\Controller\TotpForgotController" public="true" autowire="true" >
        <call method="setContainer">
          <argument type="service" id="Psr\Container\ContainerInterface"/>
        </call>
        <tag name="container.service_subscriber"/>
        <tag name="controller.service_arguments"/>
      </service>

      <service id="svc_totp.service.logger" class="Svc\TotpBundle\Service\TotpLogger" public="true" autowire="true" >
        <argument type="service" id="svc_totp.service.default_logger" />
        <argument>%kernel.environment%</argument>
        <tag name="controller.service_arguments"/>
      </service>
      <service id="Svc\TotpBundle\Service\TotpLogger" alias="svc_totp.service.logger" />


      <service id="svc_totp.service.default_logger" class="Svc\TotpBundle\Service\TotpDefaultLogger" public="true" autowire="true" >
        <tag name="controller.service_arguments"/>
      </service>
      <service id="Svc\TotpBundle\Service\TotpDefaultLogger" alias="svc_totp.service.default_logger" />

    </services>
</container>
