{% trans_default_domain 'TotpBundle' %}
{% extends 'base.html.twig' %}

{% block title %}{% trans %}Save Backup Codes{% endtrans %}{% endblock %}

{% block body %}

<div class='form-md'>
  <div class="login-form mt-4 p-4">
    <div class="alert alert-success" role="alert">
      {% trans %}You have successfully activated two-factor authentication for your Account{% endtrans %}.
    </div>

    <h1 class="h3 mb-3 font-weight-normal">{% trans %}Save Backup Codes{% endtrans %}</h1>

    <div class="row">
      <div class="col-auto">
        <ol>
          {% for backupcode in backupcodes %}
            <li>{{ backupcode }}</li>
          {% endfor %}
        </ol>
      </div>
      <div class="col">
        {% trans %}We strongly recommend storing backup codes in safe places like 1Password or LastPass applications{% endtrans %}.<br /><br />
        {% trans %}Use backup codes for emergency sign in, if you lost or canâ€™t access your Authenticator (each code only once){% endtrans %}.
      </div>
    </div>

  </div>
</div>
{% endblock %}
